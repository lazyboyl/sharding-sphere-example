<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sharding.mysql.example.dao.OrderDao">
    <resultMap id="BaseResultMap" type="com.sharding.mysql.example.entity.Order">
        <id column="order_id" jdbcType="VARCHAR" property="orderId"/>
        <result column="order_no" jdbcType="VARCHAR" property="orderNo"/>
        <result column="user_Id" jdbcType="VARCHAR" property="userId"/>
        <result column="create_time" jdbcType="DATE" property="createTime"/>
    </resultMap>

    <resultMap id="OrderResultMap" type="com.sharding.mysql.example.entity.Order">
        <id column="order_id" jdbcType="VARCHAR" property="orderId"/>
        <result column="order_no" jdbcType="VARCHAR" property="orderNo"/>
        <result column="user_Id" jdbcType="VARCHAR" property="userId"/>
        <result column="create_time" jdbcType="DATE" property="createTime"/>
        <collection property="orderItemList" ofType="com.sharding.mysql.example.entity.OrderItem" column="order_id">
            <id column="order_item_id" jdbcType="VARCHAR" property="orderItemId"/>
            <result column="order_id" jdbcType="VARCHAR" property="orderId"/>
            <result column="user_Id" jdbcType="VARCHAR" property="userId"/>
            <result column="seller_id" jdbcType="VARCHAR" property="sellerId"/>
            <result column="create_time" jdbcType="DATE" property="createTime"/>
        </collection>
    </resultMap>

    <select id="queryMyOrder" resultMap="OrderResultMap" >
        select t.*,toi.* from t_order t inner join t_order_item toi on t.order_id = toi.order_id where t.user_id = #{userId}
    </select>

</mapper>